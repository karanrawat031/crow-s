<% include ./partials/header %>
<div> 
 <div class="ui card centered">
  <div class="image">
    <img src="https://static.ts.360.com/home/images/home/avatar3-0836fbe0.jpg">
  </div>
  <div class="content">
    <a class="header"><%=currentUser.username%></a>
    <div class="meta">
      <span class="date">Joined on <%=formattedTime%></span>
    </div>
    <div class="description">
      <%=currentUser.about%>
    </div>
  </div>
  <div class="extra content">
    <a>
      <i class="browser icon"></i>
      <%=no%>
    </a>
  </div>
 </div>
<div class='ui huge header inverted'>Your ADS</div> 
<% foundAuthorAll.forEach(function(foundAuthorOne){ %> 
 <div class='ui main text container segment'>
    <div class="ui items">
      <div class="item">
        <div class="content">
          <a class="header">Name:<%=foundAuthorOne.name%></a>
          <div class="description">
            <p>Perks:<%=foundAuthorOne.perks%></p>
            <p>Description:<%=foundAuthorOne.description%></p>
          </div>
        </div>
      </div>
    </div>
  </div>
<% }); %><br><hr>   
</div>
<% include ./partials/footer %>