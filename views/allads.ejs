<% include ./partials/header %> 
<div class='ui huge header inverted'>All ADS</div>
<div class='ui medium header inverted'>Total Number of adds Posted:<%=no%></div>
<% foundAll.forEach(function(foundOne){ %> 
 <div class='ui main text container segment'>
    <div class="ui items">
      <div class="item">
        <div class="content">
          <a class="header">Name:<%=foundOne.name%></a>
          <div class="description">
            <p><span style="font-size:19px;">Perks:</span><%=foundOne.perks%></p>
            <p><span style="font-size:19px;">Category:</span><%=foundOne.cat%></p>
            <p><span style="font-size:19px;">Location:</span><%=foundOne.location%></p>
            <p><span style="font-size:19px;">Duration:</span><%=foundOne.time%></p>
            <p><span style="font-size:19px;">Description:</span><%=foundOne.description%></p>
          </div>
        </div>
      </div>
    </div>
    <a class='ui green basic button' type="submit" href='/<%=currentUser.username%>/<%=foundOne._id%>/apply'>Apply</a>
    <h4 class="ui horizontal header divider">
        <a href="/user/<%=foundOne.author.username%>"><%=foundOne.author.username%></a>
      </h4>
  </div>  
<% }); %><br><hr>   
<% include ./partials/footer %>